<div class='devise-form-container text-center'>
  <h2>Welcome<br>to the<br>Mob Club</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='devise-input-container'>
      <%= f.input :email,
                  label: false,
                  placeholder: 'Username',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'devise-input-field'} %>
      <%= f.input :password,
                  label: false,
                  placeholder: 'Password',
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'devise-input-field' } %>
      <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div>
      <div class='password-position'>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
      <div class='devise-button-container'>
        <%= f.button :submit, "Log in", class:'devise-btn' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Create Account", new_registration_path(resource_name), class:'devise-btn' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
